<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu">
	<defaultcontrol>9001</defaultcontrol>
	<include>dialogeffect</include>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="button" id="9001">
			<description>Make sure we hit the first button in the group list and not the close window button</description>
			<left>-16</left>
			<top>-16</top>
			<width>4</width>
			<height>4</height>
			<label/>
			<font/>
			<onfocus>down</onfocus>
			<texturefocus/>
			<texturenofocus/>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>2</ondown>
		</control>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture>black-back.png</texture>
		</control>
		
		<control type="image">
			<left>640</left>
			<top>400</top>
			<width>620</width>
			<height>320</height>
			<texture border="20,20,20,20">win7\DialogBack.png</texture>
			
		</control>
		
				<control type="image">
			<left>820</left>
			<top>-120</top>
			<width>400</width>
	
			<texture>vista\wmc.png</texture>
			
<aspectratio>keep</aspectratio>
			</control>
		
		
		<control type="label">
				<left>680</left>
				<top>630</top>
				<width>350</width>
				<font>font40</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>bottom</aligny>
				<scroll>false</scroll>
				 <label>$INFO[Window(Home).Property(ButtonDesc)]</label>
			</control>
			
			
		<control type="grouplist" id="9000">
			<left>580</left>
			<top>540</top>
			<width>740</width>
			<height>200</height>
			<onleft>9000</onleft>
			<onright>9000</onright>
			    <orientation>horizontal</orientation>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<itemgap>15</itemgap>
			<align>center</align>

	
			<control type="button" id="2">
				<description>Exit button</description>
				<width>100</width>
				<height>100</height>
				 <onfocus>SetProperty(ButtonDesc,Close,Home)</onfocus>
				 
<aspectratio>keep</aspectratio>
				<texturefocus>vista\power\exit-focus.png</texturefocus>
				<texturenofocus>vista\power\exit-nofocus.png</texturenofocus>
				<onclick>Quit()</onclick>
				
				
	
			</control>
						<control type="button" id="3">
				<description>logoff button</description>
				<width>100</width>
				<onfocus>SetProperty(ButtonDesc,Log off,Home)</onfocus>
				<height>100</height>
				<texturefocus>vista\power\logoff-focus.png</texturefocus>
				<texturenofocus>vista\power\logoff-nofocus.png</texturenofocus>
				<onclick>System.LogOff</onclick>
			</control>
						<control type="button" id="4">
				<description>shutdown button</description>
				<width>100</width>
				<onfocus>SetProperty(ButtonDesc,Shutdown,Home)</onfocus>
				<height>100</height>
					<texturefocus>vista\power\shutdown-focus.png</texturefocus>
				<texturenofocus>vista\power\shutdown-nofocus.png</texturenofocus>
				<onclick>Powerdown()</onclick>
			</control>
						<control type="button" id="5">
				<description>restart button</description>
				<width>100</width>
				<height>100</height>
				<onfocus>SetProperty(ButtonDesc,Restart,Home)</onfocus>
						<texturefocus>vista\power\restart-focus.png</texturefocus>
				<texturenofocus>vista\power\restart-nofocus.png</texturenofocus>
				<onclick>Reset()</onclick>
			</control>
						<control type="button" id="6">
				<description>standby button</description>
				<width>100</width>
				<height>100</height>
				<onfocus>SetProperty(ButtonDesc,Stand-by,Home)</onfocus>
				<texturefocus>vista\power\standby-focus.png</texturefocus>
				<texturenofocus>vista\power\standby-nofocus.png</texturenofocus>
				<onclick>Suspend()</onclick>
			</control>
	
		</control>
	</controls>
</window>
